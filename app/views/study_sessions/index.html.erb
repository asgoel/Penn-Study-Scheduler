<h1>Your Study Sessions</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% current_user.study_sessions.each do |study_session| %>
  <tr>
    <td><%= study_session.course.full_name %></td>
    <td><%= study_session.date %></td>
    <td><%= study_session.time %></td>
    <td><%= study_session.location %></td>
    <td><%= link_to 'Show', study_session %></td>
    <td><%= link_to 'Edit', edit_study_session_path(study_session) %></td>
    <td><%= link_to 'Destroy', study_session, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


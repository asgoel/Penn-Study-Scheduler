<h1><%= current_user.first_name %>'s Schedule</h1>

<table>
  <tr>
    <th>Course</th>
    <th></th>
    <th>Options</th>
    <th></th>
  </tr>

<% @registrations.sort_by {|r| r.course.full_name }.each do |registration| %>
  <tr>
    <% title = registration.course.department + " " + registration.course.number.to_s + "-" +  registration.course.section %>
    <td><%= title %></td>
    <td><%= link_to 'Show', registration.course %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Registration', new_registration_path %>

<h1>Listing registrations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <% name = registration.user.first_name + " " + registration.user.last_name %>
    <% title = registration.course.department + " " + registration.course.number.to_s + "-" +  registration.course.section %>
    <td><%= name %></td>
    <td><%= title %></td>
    <td><%= link_to 'Show', registration %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

